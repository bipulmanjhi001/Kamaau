<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="larvaesoft.com.kamaau.com.larvaesoft.kamaau.Transaction"
    tools:showIn="@layout/app_bar_transaction">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:background="#3d3b3b"
            android:layout_height="140dp">

            <TextView
                android:layout_width="match_parent"
                android:text="Payment Method"
                android:textSize="16dp"
                android:padding="20dp"
                android:textColor="@color/white"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/add_bank_accounts"
                android:layout_width="100dp"
                android:background="@drawable/social_button_background"
                android:layout_gravity="center"
                android:gravity="center"
                android:translationZ="3dp"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Bank Account"
                    android:textSize="14dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/sorry_img"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

         <ImageView
           android:layout_width="160dp"
           android:layout_margin="20dp"
           android:layout_gravity="center"
           android:background="@drawable/ic_sorry"
           android:layout_height="150dp" />

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/colorAccent"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Sorry No Transaction"
            android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/show_ref"
            android:layout_width="match_parent"
            android:background="#595959"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_height="60dp">

            <View
                android:layout_width="4dp"
                android:background="#de470b"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <TextView
                    android:textSize="16dp"
                    android:textColor="#dcdbdb"
                    android:textStyle="normal"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:text="By Referral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/calc_date"
                    android:textSize="14dp"
                    android:textColor="#dcdbdb"
                    android:textStyle="normal"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="7 Hours Ago"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/referral_amt"
                    android:layout_width="wrap_content"
                    android:text="$ 0.01 "
                    android:textStyle="normal"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/show_adds"
            android:layout_width="match_parent"
            android:background="#595959"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_height="60dp">
            <View
                android:layout_width="4dp"
                android:background="#de470b"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <TextView
                    android:textSize="16dp"
                    android:textColor="#dcdbdb"
                    android:textStyle="normal"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:text="By Adds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/calc_exp_date"
                    android:textSize="14dp"
                    android:textColor="#dcdbdb"
                    android:textStyle="normal"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="7 Hours Ago"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/adds_calc_amt"
                    android:layout_width="wrap_content"
                    android:text="$ 0.01 "
                    android:textStyle="normal"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
