<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.larvaesoft.kamaau.Activity.RegisterActivity"
    tools:showIn="@layout/activity_register">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_checked"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"/>

            <ImageView
                android:id="@+id/select_image"
                android:layout_width="60dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="65dp"
                android:background="@drawable/ic_image_icon"
                android:layout_height="60dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:drawableLeft="@drawable/ic_name_icon"
                android:drawableStart="@drawable/ic_name_icon"
                android:hint="Name"
                android:padding="10dp"
                android:imeOptions="actionNext"
                android:drawablePadding="10dp"
                android:singleLine="true"
                android:textColorHint="@color/gray"
                android:inputType="textPersonName"
                android:textColor="#ffffff"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/dob"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:imeOptions="actionNext"
                android:drawablePadding="10dp"
                android:singleLine="true"
                android:maxLength="10"
                android:drawableLeft="@drawable/ic_dob_icon"
                android:drawableStart="@drawable/ic_dob_icon"
                android:hint="DOB"
                android:inputType="date"
                android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                android:drawableEnd="@drawable/ic_arrow_drop_down_black_24dp"
                android:padding="10dp"
                android:textColorHint="@color/gray"
                android:textColor="#ffffff"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_height="40dp">

                <ImageView
                    android:layout_width="25dp"
                    android:background="@drawable/ic_mail_icon"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:hint="Email"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textColorHint="@color/white"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:drawableLeft="@drawable/ic_phone_icon"
                android:drawableStart="@drawable/ic_phone_icon"
                android:hint="Phone number"
                android:padding="10dp"
                android:maxLength="10"
                android:imeOptions="actionNext"
                android:drawablePadding="10dp"
                android:singleLine="true"
                android:textColorHint="@color/gray"
                android:textColor="#ffffff"
                android:inputType="phone"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:inputType="text"
                android:layout_marginRight="20dp"
                android:drawableLeft="@drawable/ic_gender_icon"
                android:drawableStart="@drawable/ic_gender_icon"
                android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                android:drawableEnd="@drawable/ic_arrow_drop_down_black_24dp"
                android:hint="Gender"
                android:imeOptions="actionNext"
                android:drawablePadding="10dp"
                android:singleLine="true"
                android:maxLength="6"
                android:padding="10dp"
                android:textColorHint="@color/gray"
                android:textColor="#ffffff"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:drawableLeft="@drawable/ic_city_icon"
                android:drawableStart="@drawable/ic_city_icon"
                android:hint="City"
                android:imeOptions="actionNext"
                android:drawablePadding="10dp"
                android:singleLine="true"
                android:inputType="text"
                android:padding="10dp"
                android:textColorHint="@color/gray"
                android:textColor="#ffffff"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/pincode"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:drawableLeft="@drawable/ic_pincode_icon"
                android:drawableStart="@drawable/ic_pincode_icon"
                android:hint="Pincode"
                android:inputType="number"
                android:padding="10dp"
                android:imeOptions="actionNext"
                android:drawablePadding="10dp"
                android:singleLine="true"
                android:textColorHint="@color/gray"
                android:textColor="#ffffff"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/state"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:drawableLeft="@drawable/ic_state_icon"
                android:drawableStart="@drawable/ic_state_icon"
                android:hint="State"
                android:imeOptions="actionNext"
                android:drawablePadding="10dp"
                android:singleLine="true"
                android:inputType="text"
                android:padding="10dp"
                android:textColorHint="@color/gray"
                android:textColor="#ffffff"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/country"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:drawableLeft="@drawable/ic_country_icon"
                android:drawableStart="@drawable/ic_country_icon"
                android:hint="Country"
                android:imeOptions="actionNext"
                android:drawablePadding="10dp"
                android:singleLine="true"
                android:inputType="text"
                android:padding="10dp"
                android:textColorHint="@color/gray"
                android:textColor="#ffffff"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/referral_code"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:drawableLeft="@drawable/ic_refferral_icon"
                android:drawableStart="@drawable/ic_refferral_icon"
                android:hint="Enter Referral code "
                android:inputType="text"
                android:padding="10dp"
                android:imeOptions="actionNext"
                android:drawablePadding="10dp"
                android:singleLine="true"
                android:textColorHint="@color/gray"
                android:textColor="#ffffff"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/your_referral_code"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:drawableLeft="@drawable/ic_your_refferral_icon"
                android:drawableStart="@drawable/ic_your_refferral_icon"
                android:hint="Your Referral code "
                android:inputType="text"
                android:padding="10dp"
                android:visibility="gone"
                android:imeOptions="actionNext"
                android:drawablePadding="10dp"
                android:singleLine="true"
                android:textColorHint="@color/gray"
                android:textColor="#ffffff"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="60dp"
            android:layout_height="wrap_content">

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>

